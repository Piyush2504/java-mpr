		l.add(id);
		
		JLabel number=new JLabel("NUMBER");
		number.setBounds(150, 70, 150, 50);
		number.setForeground(Color.WHITE);
		number.setFont(new Font("serif", Font.BOLD, 30));
		l.add(number);
		
		JLabel name=new JLabel("NAME");
		name.setBounds(150, 130, 150, 50);
		name.setForeground(Color.WHITE);
		name.setFont(new Font("serif", Font.BOLD, 30));
		l.add(name);
		
		JLabel gender=new JLabel("GENDER");
		gender.setBounds(150, 180, 150, 50);
		gender.setForeground(Color.WHITE);
		gender.setFont(new Font("serif", Font.BOLD, 30));
		l.add(gender);
		
		JLabel country=new JLabel("COUNTRY");
		country.setBounds(230, 20, 150, 50);
		country.setForeground(Color.WHITE);
		country.setFont(new Font("serif", Font.BOLD, 30));
